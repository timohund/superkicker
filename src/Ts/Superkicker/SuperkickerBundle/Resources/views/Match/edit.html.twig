{% extends "subpage.html.twig" %}
	{% block heading %}Matches{% endblock %}
	{% block content %}
		<h1>Spiele</h1>
		{% if saved %}
			<div class="alert alert-success" role="alert">Die Spiele wurden erfolgreich gespeichert.</div>
		{% endif %}

		<div class="content-inner">
			<form action="{{ path('ts_superkicker_match_save') }}" id="matchCreate" method="post">

				<table class="table">
					{% for match in allMatches %}
						<tr>
							<td>{{ match.matchDay }}</td>
							<td>{{ match.homeClub.name }}</td>
							<td>{{ match.guestClub.name }}</td>
						</tr>
					{% endfor %}
					<tr>

							<input type="hidden" name="matchId" value="{{ matchId }}"/>

							<td>
								<select name="match[day]" class="form-control" id="match_new_day">
									{%for day in 1..34%}
										<option value="{{ day }}">{{ day }}</option>
									{% endfor %}
								</select>
							</td>

							<td>
								<select name="match[home]" class="form-control" id="match_new_home">
									{% for club in allClubs %}
										<option value="{{ club.id }}" >{{ club.name }}</option>
									{% endfor %}
								</select>

							</td>

							<td>
								<select name="match[guest]" class="form-control" id="match_new_guest">
									{% for club in allClubs %}
										<option value="{{ club.id }}" >{{ club.name }}</option>
									{% endfor %}
								</select>

							</td>

					</tr>
				</table>
				<input type="submit" class="btn btn-default navbar-btn" value="Speichern"/>
			</form>
		</div>
	{% endblock %}